###############################################################################
#                      BitcoinTX - Project Environment Variables              #
###############################################################################

# PROJECT_NAME: The name of the project.
VITE_PROJECT_NAME=BitcoinTX

# ENVIRONMENT: "development", "staging", or "production".
# Set this to "production" for a live environment.
VITE_ENVIRONMENT=production

# DEBUG: Set to False for production to avoid verbose logging or sensitive error info.
DEBUG=False

###############################################################################
#                        Frontend Environment Variables                        #
###############################################################################

# VITE_API_BASE_URL:
# The base URL for frontend API requests. For production, point to your live backend endpoint.
# For example: https://api.example.com or /api for relative path behind a reverse proxy.
VITE_API_BASE_URL=/api

###############################################################################
#                         Backend Environment Variables                        #
###############################################################################

# DATABASE_FILE:
# The relative path for the SQLite database file (used if DATABASE_URL is not set).
DATABASE_FILE=backend/bitcoin_tracker.db

# DATABASE_URL:
# Optional. If set, overrides DATABASE_FILE. Provide a full URI, e.g.:
# DATABASE_URL=sqlite:////absolute/path/to/bitcoin_tracker.db
# or a Postgres URI in production: postgresql://user:password@hostname:port/db_name
DATABASE_URL=

# SECRET_KEY:
# This key is used for signing JWT tokens and other sensitive security operations.
# In production, use a long, randomly generated string (never commit it to Git).
SECRET_KEY=CHANGEME-REPLACE-WITH-STRONG-SECRET

# CORS_ALLOW_ORIGINS:
# Comma-separated list of allowed origins for Cross-Origin Resource Sharing.
# In production, list only your site(s). Example: https://myapp.com
CORS_ALLOW_ORIGINS=https://example.com

# PYTHONPATH:
# (Optional) Helps Python locate the 'backend' folder if needed.
PYTHONPATH=backend

# JWT_ALGORITHM: The algorithm used to sign JWT tokens (commonly HS256).
JWT_ALGORITHM=HS256

# JWT_ACCESS_TOKEN_EXPIRE_MINUTES:
# The number of minutes before a JWT access token expires.
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# LOG_LEVEL:
# Logging level (DEBUG, INFO, WARNING, ERROR). For production, INFO or WARNING is recommended.
LOG_LEVEL=INFO
