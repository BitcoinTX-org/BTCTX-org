###############################################################################
# BitcoinTX Environment Configuration - Example File                          #
# Copy this file to `.env` and fill in any required values                   #
###############################################################################

# REQUIRED — used for signing session cookies
SECRET_KEY=replace_this_with_a_strong_random_value

# OPTIONAL — comma-separated origins for dev/testing
# In production, omit this or restrict to your frontend domain
CORS_ALLOW_ORIGINS=http://127.0.0.1:5173,http://localhost:5173

# REQUIRED — relative path to SQLite DB (default mode)
DATABASE_FILE=backend/bitcoin_tracker.db

# OPTIONAL — full SQLAlchemy path if you want to override DATABASE_FILE
# Example for SQLite: sqlite:////absolute/path/to/bitcoin_tracker.db
# DATABASE_URL=

# OPTIONAL — for frontend (Vite) to override API base URL (if needed)
VITE_API_BASE_URL=/api

# OPTIONAL — debug flags for logging
DEBUG=False
LOG_LEVEL=INFO
